<Page
    x:Class="MyShop.App.Views.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.App.Converters"
    xmlns:models="using:MyShop.Core.Models"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:OrderStatusToForegroundConverter x:Key="StatusToForegroundConverter"/>
        <converters:OrderStatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <converters:OrderStatusToTextConverter x:Key="StatusToTextConverter"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
        </Style>

        <Style x:Key="DialogPrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
             <Setter Property="Background" Value="#003F62"/>
             <Setter Property="Foreground" Value="White"/>
             <Setter Property="HorizontalAlignment" Value="Stretch"/>
             <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding CornerRadius}" Padding="{TemplateBinding Padding}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" To="#005A8C" Duration="0:0:0.1" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" To="#002F49" Duration="0:0:0.05" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}" ContentTransitions="{TemplateBinding ContentTransitions}" ContentTemplate="{TemplateBinding ContentTemplate}" Foreground="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="DiscountSelectionTemplate" x:DataType="models:Discount">
            <Grid Padding="12" Background="Transparent" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" Foreground="#1A1A1A"/>
                        <Border Background="#2196F3" CornerRadius="4" Padding="6,2">
                            <TextBlock Text="{x:Bind Type, Converter={StaticResource DiscountTypeToTextConverter}}" FontSize="10" Foreground="White" FontWeight="SemiBold"/>
                        </Border>
                        <Border Background="#FF9800" CornerRadius="4" Padding="6,2" Visibility="{x:Bind MemberOnly}">
                            <TextBlock Text="Member Only" FontSize="10" Foreground="White" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="{x:Bind Code}" FontSize="12" Foreground="#666666" Margin="0,4,0,0"/>
                    <TextBlock Text="{x:Bind Converter={StaticResource DiscountValueDisplayConverter}}" FontSize="13" FontWeight="Bold" Foreground="#00796B" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ProductSelectionTemplate" x:DataType="models:Product">
            <Grid Padding="12" Background="Transparent" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                    <TextBlock Text="{x:Bind Sku}" FontSize="12" Foreground="#666666"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="Stock:" FontSize="12" Foreground="#666666"/>
                    <TextBlock Text="{x:Bind Stock}" FontSize="12" Foreground="#666666"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2" Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right" MinWidth="100" TextAlignment="Right"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ReadOnlyOrderItemTemplate" x:DataType="models:OrderItem">
            <Grid Padding="12" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="40" Height="40" CornerRadius="4" Background="#F5F5F5" Margin="0,0,12,0">
                        <FontIcon Glyph="&#xE7F4;" Foreground="#CCCCCC"/>
                    </Border>
                    <TextBlock Grid.Column="1" Text="{x:Bind Product.Name}" VerticalAlignment="Center" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                </Grid>

                <TextBlock Grid.Column="1" Text="{x:Bind Product.Sku}" VerticalAlignment="Center" Foreground="#666666"/>
                
                <TextBlock Grid.Column="2" Text="{x:Bind Quantity}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="3" Text="{x:Bind UnitPrice, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                <TextBlock Grid.Column="4" Text="{x:Bind Total, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="24" RowSpacing="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Page Header -->
                <RowDefinition Height="Auto"/> <!-- Customer Section -->
                <RowDefinition Height="Auto"/>    <!-- Products Section -->
                <RowDefinition Height="Auto"/> <!-- Totals Section -->
            </Grid.RowDefinitions>

            <!-- Page Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <TextBlock x:Name="PageTitleText" Text="New Order" FontSize="30" FontWeight="Bold" Foreground="#0C2B4E"/>
                        <Border x:Name="StatusBadgeBorder" CornerRadius="4" Padding="8,4" Background="#20FF9F00" VerticalAlignment="Center">
                            <TextBlock x:Name="StatusBadgeText" Text="PENDING" FontSize="12" FontWeight="SemiBold" Foreground="#FFFF9F00"/>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <FontIcon Glyph="&#xE787;" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock x:Name="CurrentDateText" FontWeight="Medium" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Top">
                    <ComboBox x:Name="StatusComboBox" Width="150" SelectedIndex="0" Header="Status" SelectionChanged="OnStatusChanged">
                         <ComboBoxItem Content="Pending" Tag="PENDING"/>
                         <ComboBoxItem Content="Processing" Tag="PROCESSING"/>
                         <ComboBoxItem Content="Completed" Tag="COMPLETED"/>
                         <ComboBoxItem Content="Cancelled" Tag="CANCELLED"/>
                    </ComboBox>
                    
                    <Button Background="White" BorderThickness="1" BorderBrush="#E0E0E0" Padding="12,8" CornerRadius="4" VerticalAlignment="Bottom" Margin="0,0,0,1">
                        <FontIcon Glyph="&#xE749;" FontSize="16"/> <!-- Print -->
                    </Button>

                    <Button Content="Cancel" Click="OnCancelClick" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Foreground="#333333" Padding="16,8" CornerRadius="4" VerticalAlignment="Bottom" Margin="0,0,0,1"/>
                    
                    <Button x:Name="SaveButton" Background="#003F62" Foreground="White" Padding="24,8" CornerRadius="4" VerticalAlignment="Bottom" Click="OnSaveOrderClick" Margin="0,0,0,1">
                        <TextBlock Text="Save" FontWeight="SemiBold"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Customer Section -->
            <Grid Grid.Row="1" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Customer Information" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid Grid.Row="1" ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Spacing="16">
                         <!-- Search Customer -->
                         <StackPanel Spacing="8">
                            <TextBlock Text="Search Customer" FontWeight="Medium" Foreground="#666666"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <AutoSuggestBox x:Name="CustomerSuggestBox" 
                                              PlaceholderText="Search by name or phone..." 
                                              QueryIcon="Find"
                                              TextChanged="OnCustomerSearchTextChanged"
                                              SuggestionChosen="OnCustomerSuggestionChosen">
                                    <AutoSuggestBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Phone}" FontSize="12" Foreground="#666666"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </AutoSuggestBox.ItemTemplate>
                                </AutoSuggestBox>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="8,0,0,0">
                                     <Button x:Name="ClearCustomerButton" Background="#F0F0F0" BorderThickness="0" Padding="12,8" Click="OnClearCustomerClick" ToolTipService.ToolTip="Clear Selection">
                                        <FontIcon Glyph="&#xE894;" FontSize="12"/>
                                     </Button>
                                     <Button x:Name="AddCustomerButton" Background="#F0F0F0" BorderThickness="0" Padding="12,8" Click="OnAddCustomerClick" ToolTipService.ToolTip="Create New Customer">
                                        <FontIcon Glyph="&#xE710;" FontSize="12"/>
                                     </Button>
                                </StackPanel>
                            </Grid>
                         </StackPanel>

                        <!-- Notes -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Notes" FontWeight="Medium" Foreground="#666666"/>
                            <TextBox x:Name="NotesTextBox" PlaceholderText="Type notes..." Height="60" AcceptsReturn="True"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Products Section -->
            <Grid Grid.Row="2" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Products" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    <Button x:Name="AddProductButton" HorizontalAlignment="Right" Background="#003F62" Foreground="White" Padding="12,6" Click="OnAddProductClick" CornerRadius="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                             <FontIcon Glyph="&#xE710;" FontSize="12"/>
                             <TextBlock Text="Add Product"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Table Header -->
                <Grid Grid.Row="1" Background="#F9FAFB" Padding="16,12" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/> <!-- Product Name (Image included) -->
                        <ColumnDefinition Width="1.2*"/> <!-- SKU/ID -->
                        <ColumnDefinition Width="1.5*"/> <!-- Quantity -->
                        <ColumnDefinition Width="1.2*"/> <!-- Price -->
                        <ColumnDefinition Width="1.2*"/> <!-- Total -->
                        <ColumnDefinition Width="Auto" MinWidth="80"/> <!-- Actions -->
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Product Name" FontWeight="SemiBold" Foreground="#666666"/>
                    <TextBlock Grid.Column="1" Text="SKU" FontWeight="SemiBold" Foreground="#666666"/>
                    <TextBlock Grid.Column="2" Text="Quantity" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" Text="Price" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="Total" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Column="5" Text="Delete" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Center"/>
                </Grid>

                <!-- Product List -->
                <ListView Grid.Row="2" x:Name="OrderItemsList" SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:OrderItem">
                            <Grid Padding="16,12" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="1.2*"/>
                                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                    <!-- Image Placeholder -->
                                    <Border Width="40" Height="40" Background="#F0F0F0" CornerRadius="4">
                                         <FontIcon Glyph="&#xE74C;" FontSize="16" Foreground="#CCCCCC" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{x:Bind Product.Name}" VerticalAlignment="Center" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" Text="{x:Bind Product.Sku}" VerticalAlignment="Center" Foreground="#666666"/>

                                <NumberBox Grid.Column="2" Value="{x:Bind Quantity, Mode=TwoWay}" Minimum="1" SpinButtonPlacementMode="Inline" 
                                           ValueChanged="OnQuantityChanged" Tag="{x:Bind}" VerticalAlignment="Center" Width="120" HorizontalAlignment="Center"/>

                                <TextBlock Grid.Column="3" Text="{x:Bind UnitPrice, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                                <TextBlock Grid.Column="4" Text="{x:Bind Total, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                                <Button Grid.Column="5" Background="Transparent" BorderThickness="0" Padding="8" Click="OnRemoveItemClick" Tag="{x:Bind}" HorizontalAlignment="Center">
                                    <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#FF5555"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Footer / Totals -->
            <Grid Grid.Row="3" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1" HorizontalAlignment="Right" Width="400">
                 <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                 </Grid.RowDefinitions>
                 <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                 </Grid.ColumnDefinitions>
                 
                 <TextBlock Text="Subtotal" Foreground="#666666" Margin="0,0,0,8"/>
                 <TextBlock x:Name="SubtotalText" Text="$0.00" FontWeight="SemiBold" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,0,8"/>

                 <TextBlock Grid.Row="1" Text="Tax (0%)" Foreground="#666666" Margin="0,0,0,8"/>
                 <TextBlock Grid.Row="1" Grid.Column="1" Text="$0.00" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,0,8"/>
                 
                 <TextBlock Grid.Row="2" Text="Discount" Foreground="#666666" Margin="0,0,0,8"/>
                 <StackPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Spacing="8" Margin="0,0,0,8" Orientation="Horizontal">
                    <Button x:Name="SelectDiscountButton" Content="Select Discount" Click="OnSelectDiscountClick" Width="150" HorizontalContentAlignment="Left" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Foreground="#1A1A1A"/>
                    <Button x:Name="RemoveDiscountButton" Visibility="Collapsed" Click="OnRemoveDiscountClick" Background="Transparent" BorderThickness="0" Padding="4" ToolTipService.ToolTip="Remove Discount">
                        <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="#FF5555"/>
                    </Button>
                    <TextBlock x:Name="DiscountAmountText" Text="-$0.00" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#27AE60" Margin="8,0,0,0"/>
                 </StackPanel>

                 <!-- Commission Row (for Staff) -->
                 <TextBlock x:Name="CommissionLabel" Grid.Row="3" Text="Commission" Foreground="#666666" Margin="0,0,0,16"/>
                 <StackPanel x:Name="CommissionPanel" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Spacing="4" Margin="0,0,0,16" Orientation="Horizontal">
                    <TextBlock x:Name="CommissionRateText" Text="(3%)" FontSize="12" Foreground="#999999" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CommissionAmountText" Text="$0.00" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#FF9800"/>
                 </StackPanel>
                 
                 <Border Grid.Row="4" Grid.ColumnSpan="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,0,0,16"/>
                 
                 <TextBlock Grid.Row="5" Text="Total" FontSize="18" FontWeight="Bold" Foreground="#1A1A1A"/>
                 <TextBlock Grid.Row="5" Grid.Column="1" x:Name="TotalAmountText" Text="$0.00" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Foreground="#1A1A1A"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
