<Page
    x:Class="MyShop.App.Views.CreateOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.App.Converters"
    xmlns:models="using:MyShop.Core.Models"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:OrderStatusToForegroundConverter x:Key="StatusToForegroundConverter"/>
        <converters:OrderStatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <converters:OrderStatusToTextConverter x:Key="StatusToTextConverter"/>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
        </Style>

        <Style x:Key="DialogPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#003F62"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="#003F62" CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#004F7A"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#002F4A"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#CCCCCC"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="#666666"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Foreground="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Padding="24" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Page Header -->
            <RowDefinition Height="Auto"/> <!-- Customer Section -->
            <RowDefinition Height="*"/>    <!-- Products Section -->
            <RowDefinition Height="Auto"/> <!-- Totals Section -->
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <TextBlock Text="New Order" FontSize="24" FontWeight="Bold" Foreground="#1A1A1A"/>
                    <Border CornerRadius="4" Padding="8,4" Background="#E0F2F1" VerticalAlignment="Center">
                        <TextBlock Text="PENDING" FontSize="12" FontWeight="SemiBold" Foreground="#00796B"/>
                    </Border>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE787;" FontSize="16" Foreground="#666666"/>
                    <TextBlock x:Name="CurrentDateText" FontWeight="Medium" Foreground="#1A1A1A"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Top">
                <ComboBox x:Name="StatusComboBox" Width="150" SelectedIndex="0" Header="Status">
                     <ComboBoxItem Content="Pending" Tag="PENDING"/>
                     <ComboBoxItem Content="Processing" Tag="PROCESSING"/>
                     <ComboBoxItem Content="Completed" Tag="COMPLETED"/>
                     <ComboBoxItem Content="Cancelled" Tag="CANCELLED"/>
                </ComboBox>
                
                <Button Background="White" BorderThickness="1" BorderBrush="#E0E0E0" Padding="12,8" CornerRadius="4" VerticalAlignment="Bottom" Margin="0,0,0,1">
                    <FontIcon Glyph="&#xE749;" FontSize="16"/> <!-- Print -->
                </Button>
                
                <Button Background="#003F62" Foreground="White" Padding="24,8" CornerRadius="4" VerticalAlignment="Bottom" Click="OnSaveOrderClick" Margin="0,0,0,1">
                    <TextBlock Text="Save" FontWeight="SemiBold"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Customer Section -->
        <Grid Grid.Row="1" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Customer Details" Style="{StaticResource SectionHeaderStyle}"/>

            <StackPanel Grid.Row="1" Spacing="16">
                <!-- Customer Selection -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Customer" FontWeight="Medium" Foreground="#666666"/>
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <AutoSuggestBox x:Name="CustomerSuggestBox" 
                                        HorizontalAlignment="Stretch" 
                                        PlaceholderText="Search customer (name/phone)..."
                                        TextChanged="OnCustomerSearchTextChanged"
                                        SuggestionChosen="OnCustomerSuggestionChosen"
                                        QueryIcon="Find">
                            <AutoSuggestBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Phone}" FontSize="12" Foreground="#666666"/>
                                    </StackPanel>
                                </DataTemplate>
                            </AutoSuggestBox.ItemTemplate>
                        </AutoSuggestBox>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Background="#F0F0F0" BorderThickness="0" Padding="12,8" Click="OnClearCustomerClick" ToolTipService.ToolTip="Clear Selection">
                                <FontIcon Glyph="&#xE894;" FontSize="12"/>
                            </Button>
                            <Button Background="#F0F0F0" BorderThickness="0" Padding="12,8" Click="OnAddCustomerClick" ToolTipService.ToolTip="Create New Customer">
                                <FontIcon Glyph="&#xE710;" FontSize="12"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Notes -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Notes" FontWeight="Medium" Foreground="#666666"/>
                    <TextBox x:Name="NotesTextBox" PlaceholderText="Type notes..." Height="60" AcceptsReturn="True"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Products Section -->
        <Grid Grid.Row="2" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="Products" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                <Button HorizontalAlignment="Right" Background="#003F62" Foreground="White" Padding="12,6" Click="OnAddProductClick" CornerRadius="4">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                         <FontIcon Glyph="&#xE710;" FontSize="12"/>
                         <TextBlock Text="Add Product"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Table Header -->
            <Grid Grid.Row="1" Background="#F9FAFB" Padding="16,12" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Checkbox -->
                    <ColumnDefinition Width="3*"/> <!-- Product Name (Image included) -->
                    <ColumnDefinition Width="1.5*"/> <!-- SKU/ID -->
                    <ColumnDefinition Width="1*"/> <!-- Quantity -->
                    <ColumnDefinition Width="1.5*"/> <!-- Price -->
                    <ColumnDefinition Width="1.5*"/> <!-- Total -->
                </Grid.ColumnDefinitions>
                
                <CheckBox IsChecked="False" IsEnabled="False"/> <!-- Select All Placeholder -->
                <TextBlock Grid.Column="1" Text="Product Name" FontWeight="SemiBold" Foreground="#666666" Margin="12,0,0,0"/>
                <TextBlock Grid.Column="2" Text="SKU" FontWeight="SemiBold" Foreground="#666666"/>
                <TextBlock Grid.Column="3" Text="Quantity" FontWeight="SemiBold" Foreground="#666666"/>
                <TextBlock Grid.Column="4" Text="Price" FontWeight="SemiBold" Foreground="#666666"/>
                <TextBlock Grid.Column="5" Text="Total" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Product List -->
            <ListView Grid.Row="2" x:Name="OrderItemsList" SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:OrderItem">
                        <Grid Padding="16,12" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox IsChecked="False" Margin="0,0,12,0" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <!-- Image Placeholder -->
                                <Border Width="40" Height="40" Background="#F0F0F0" CornerRadius="4">
                                     <FontIcon Glyph="&#xE74C;" FontSize="16" Foreground="#CCCCCC" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{x:Bind Product.Name}" VerticalAlignment="Center" FontWeight="Medium"/>
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{x:Bind Product.Sku}" VerticalAlignment="Center" Foreground="#666666"/>

                            <NumberBox Grid.Column="3" Value="{x:Bind Quantity, Mode=TwoWay}" Minimum="1" SpinButtonPlacementMode="Compact" 
                                       ValueChanged="OnQuantityChanged" Tag="{x:Bind}" VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="4" Text="{x:Bind UnitPrice, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Total, Converter={StaticResource CurrencyConverter}}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Background="Transparent" BorderThickness="0" Padding="4" Click="OnRemoveItemClick" Tag="{x:Bind}">
                                    <FontIcon Glyph="&#xE711;" FontSize="12" Foreground="#FF5555"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Footer / Totals -->
        <Grid Grid.Row="3" Background="White" CornerRadius="8" Padding="24" BorderBrush="#E0E0E0" BorderThickness="1" HorizontalAlignment="Right" Width="400">
             <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
             </Grid.RowDefinitions>
             <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
             </Grid.ColumnDefinitions>
             
             <TextBlock Text="Subtotal" Foreground="#666666" Margin="0,0,0,8"/>
             <TextBlock x:Name="SubtotalText" Text="0 ₫" FontWeight="SemiBold" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,0,8"/>

             <TextBlock Grid.Row="1" Text="Tax (0%)" Foreground="#666666" Margin="0,0,0,8"/>
             <TextBlock Grid.Row="1" Grid.Column="1" Text="0 ₫" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,0,8"/>
             
             <TextBlock Grid.Row="2" Text="Discount" Foreground="#666666" Margin="0,0,0,8"/>
             <ComboBox Grid.Row="2" Grid.Column="1" x:Name="DiscountComboBox" PlaceholderText="Select Discount" Width="150" HorizontalAlignment="Right" Margin="0,0,0,8" SelectionChanged="OnDiscountSelectionChanged" DisplayMemberPath="Name"/>
             <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DiscountAmountText" Text="-0 ₫" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,28,0,0" Foreground="#27AE60"/>
             
             <TextBlock Grid.Row="3" Text="Shipping Rate" Foreground="#666666" Margin="0,0,0,16"/>
             <TextBlock Grid.Row="3" Grid.Column="1" Text="0 ₫" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,0,16"/>
             
             <Border Grid.Row="4" Grid.ColumnSpan="2" Height="1" Background="#E0E0E0" Margin="0,0,0,16"/>
             
             <TextBlock Grid.Row="4" Text="Total" FontSize="18" FontWeight="Bold" Margin="0,16,0,0"/>
             <TextBlock Grid.Row="4" Grid.Column="1" x:Name="TotalText" Text="0 ₫" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,16,0,0"/>
        </Grid>
    </Grid>
</Page>
