<Page
    x:Class="MyShop.App.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.App.Views"
    xmlns:controls="using:MyShop.App.Controls"
    xmlns:converters="using:MyShop.App.Converters"
    xmlns:dto="using:MyShop.Core.Models.DTOs"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:BoolToArrowGlyphConverter x:Key="BoolToArrowGlyphConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:DateTimeToRelativeConverter x:Key="DateTimeToRelativeConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <converters:StringComparisonToBrushConverter x:Key="StringComparisonToBrushConverter"/>
        <converters:StringComparisonToForegroundConverter x:Key="StringComparisonToForegroundConverter"/>
        <converters:OrderStatusToBackgroundConverter x:Key="OrderStatusToBackgroundConverter"/>
        <converters:OrderStatusToForegroundConverter x:Key="OrderStatusToForegroundConverter"/>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">

            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Home > Dashboard" 
                               FontSize="14" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Spacing="6">
                    <FontIcon Glyph="&#xE787;" FontSize="18" Foreground="#0C2B4E"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentDateString, Mode=OneWay}" FontSize="16" Foreground="#0C2B4E" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>

            <!-- Stats Cards -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:StatCard Grid.Column="0"
                                   Title="Total Products"
                                   Value="{x:Bind ViewModel.Stats.TotalProducts, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                   IconGlyph="&#xE7F8;"/>

                <controls:StatCard Grid.Column="1"
                                   Title="Today Orders"
                                   Value="{x:Bind ViewModel.Stats.TodayOrders, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                   IconGlyph="&#xE7BF;"/>

                <controls:StatCard Grid.Column="2"
                                   Title="Today Revenue"
                                   Value="{x:Bind ViewModel.Stats.TodayRevenue, Mode=OneWay, Converter={StaticResource CurrencyConverter}}"
                                   IconGlyph="&#xE1D0;"/>
            </Grid>

            <!-- Sales Graph + Best Sellers -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sales Graph -->
                <Border Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="Sale Graph" FontSize="18" FontWeight="SemiBold"/>
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
                                <Button Content="WEEKLY" 
                                        Command="{x:Bind ViewModel.ChangePeriodCommand}"
                                        CommandParameter="WEEKLY"
                                        Background="{x:Bind ViewModel.SelectedPeriod, Mode=OneWay, Converter={StaticResource StringComparisonToBrushConverter}, ConverterParameter=WEEKLY}"
                                        Foreground="{x:Bind ViewModel.SelectedPeriod, Mode=OneWay, Converter={StaticResource StringComparisonToForegroundConverter}, ConverterParameter=WEEKLY}"
                                        Height="32"
                                        MinWidth="80"/>
                                <Button Content="MONTHLY" 
                                        Command="{x:Bind ViewModel.ChangePeriodCommand}"
                                        CommandParameter="MONTHLY"
                                        Background="{x:Bind ViewModel.SelectedPeriod, Mode=OneWay, Converter={StaticResource StringComparisonToBrushConverter}, ConverterParameter=MONTHLY}"
                                        Foreground="{x:Bind ViewModel.SelectedPeriod, Mode=OneWay, Converter={StaticResource StringComparisonToForegroundConverter}, ConverterParameter=MONTHLY}"
                                        Height="32"
                                        MinWidth="80"/>
                                <Button Content="YEARLY" 
                                        Command="{x:Bind ViewModel.ChangePeriodCommand}"
                                        CommandParameter="YEARLY"
                                        Background="{x:Bind ViewModel.SelectedPeriod, Mode=OneWay, Converter={StaticResource StringComparisonToBrushConverter}, ConverterParameter=YEARLY}"
                                        Foreground="{x:Bind ViewModel.SelectedPeriod, Mode=OneWay, Converter={StaticResource StringComparisonToForegroundConverter}, ConverterParameter=YEARLY}"
                                        Height="32"
                                        MinWidth="80"/>
                            </StackPanel>
                        </Grid>
                        <lvc:CartesianChart Height="300"
                                           Series="{x:Bind ViewModel.ChartSeries, Mode=OneWay}"
                                           XAxes="{x:Bind ViewModel.ChartXAxes, Mode=OneWay}"
                                           YAxes="{x:Bind ViewModel.ChartYAxes, Mode=OneWay}"
                                           TooltipPosition="Top"
                                           AnimationsSpeed="00:00:00.500"/>
                    </StackPanel>
                </Border>

                <!-- Best Sellers -->
                <Border Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="Best Sellers" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <ListView ItemsSource="{x:Bind ViewModel.TopProducts, Mode=OneWay}" 
                                  SelectionMode="None"
                                  IsItemClickEnabled="True"
                                  ItemClick="OnBestSellerItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:TopProductDto">
                                    <Grid Margin="-12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0">
                                            <Ellipse Fill="#1D546C"/>
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{x:Bind Product.ImageUrl, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Product.Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind Product.Price, Converter={StaticResource CurrencyConverter}}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="12,0,0,0">
                                            <TextBlock Text="{x:Bind Revenue, Converter={StaticResource CurrencyConverter}}" FontWeight="Bold" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{x:Bind Quantity}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Button Content="REPORT" 
                                Click="OnReportClick"
                                Background="#1D546C" 
                                Foreground="White"
                                HorizontalAlignment="Stretch" 
                                Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Orders + Low Stock -->
            <Grid ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Orders -->
                <Grid Grid.Column="0" Background="White" CornerRadius="8" Padding="0" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Title -->
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="*"/>    <!-- Items -->
                    </Grid.RowDefinitions>

                    <TextBlock Text="Recent Orders" FontSize="18" FontWeight="SemiBold" Margin="24,12"/>

                    <!-- Table Header -->
                    <Grid Grid.Row="1" Background="#F9FAFB" Padding="24,12" BorderBrush="#E0E0E0" BorderThickness="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Order ID" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Customer" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Status" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Amount" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Items -->
                    <ListView Grid.Row="2" 
                              ItemsSource="{x:Bind ViewModel.RecentOrders, Mode=OneWay}" 
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                              ItemClick="OnRecentOrderClick">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="dto:OrderDto">
                                <Grid Padding="24,16" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{x:Bind Id}" VerticalAlignment="Center" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text="{x:Bind CustomerName}" VerticalAlignment="Center"/>
                                    
                                    <Border Grid.Column="2" 
                                            Background="{x:Bind Status, Converter={StaticResource OrderStatusToBackgroundConverter}}" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Status}" 
                                                   FontSize="12" 
                                                   FontWeight="Medium"
                                                   Foreground="{x:Bind Status, Converter={StaticResource OrderStatusToForegroundConverter}}"/>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="3" 
                                               Text="{x:Bind Total, Converter={StaticResource CurrencyConverter}}" 
                                               FontWeight="SemiBold" 
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <!-- Low Stock Products -->
                <Border Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    <StackPanel>
                        <TextBlock Text="Low Stock Products" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16"/>
                        <ListView ItemsSource="{x:Bind ViewModel.LowStockProducts, Mode=OneWay}" 
                                  SelectionMode="None"
                                  IsItemClickEnabled="True"
                                  ItemClick="OnLowStockItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="dto:LowStockProductDto">
                                    <Grid Margin="-12,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0">
                                            <Ellipse Fill="#1D546C"/>
                                            <Ellipse>
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{x:Bind ImageUrl, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold">
                                            <Run Text="{x:Bind Stock}"/>
                                            <Run Text=" left" FontWeight="Normal" FontSize="12"/>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Button Content="REPORT" 
                                Click="OnReportClick"
                                Background="#1D546C" 
                                Foreground="White"
                                HorizontalAlignment="Stretch" 
                                Margin="0,16,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
