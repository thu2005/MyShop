<Page
    x:Class="MyShop.App.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyShop.App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vm="using:MyShop.App.ViewModels"
    xmlns:models="using:MyShop.Core.Models"
    xmlns:converters="using:MyShop.App.Converters"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filters -->
            <RowDefinition Height="Auto"/> <!-- Summary Cards -->
            <RowDefinition Height="*"/>    <!-- Charts -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Reports" FontSize="30" FontWeight="Bold" Foreground="#0C2B4E"/>
                    <TextBlock Text="Home > Reports" 
                               FontSize="14" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Spacing="6">
                    <FontIcon Glyph="&#xE787;" FontSize="18" Foreground="#0C2B4E"/>
                    <TextBlock Text="{x:Bind ViewModel.CurrentDateString, Mode=OneWay}" FontSize="16" Foreground="#0C2B4E" FontWeight="SemiBold"/>
                </StackPanel>
        </Grid>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,24,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Period & Date Pickers -->
                <ColumnDefinition Width="*"/>    <!-- Spacer -->
                <ColumnDefinition Width="Auto"/> <!-- Commission Summary (Staff only) -->
                <ColumnDefinition Width="Auto"/> <!-- Export Button -->
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                <!-- Period Selector with inline label -->
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="Period:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <ComboBox x:Name="PeriodCombo" SelectedIndex="0" MinWidth="150"
                              ItemsSource="{x:Bind ViewModel.Periods, Mode=OneTime}"
                              SelectedItem="{x:Bind ViewModel.SelectedPeriod, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Date Range Pickers (Visible only when Custom is selected) -->
                <StackPanel Orientation="Horizontal" Spacing="16" VerticalAlignment="Center"
                            Visibility="{x:Bind ViewModel.IsCustomPeriod, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="From:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <CalendarDatePicker Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="To:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <CalendarDatePicker Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Commission Summary (Staff only) -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center" Margin="0,0,16,0"
                        Visibility="{x:Bind ViewModel.IsStaff, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="#F0F8FF" BorderBrush="#1D546C" BorderThickness="1" CornerRadius="8" Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Order Total" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalOrderAmount, Mode=OneWay}" FontSize="16" FontWeight="Bold" Foreground="#003F62"/>
                    </StackPanel>
                </Border>
                <Border Background="#E8F5E9" BorderBrush="#1D546C" BorderThickness="1" CornerRadius="8" Padding="12,8">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Commission" FontSize="11" Foreground="Gray" FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind ViewModel.TotalCommissionAmount, Mode=OneWay}" FontSize="16" FontWeight="Bold" Foreground="#1D546C"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Export Button with Dashboard blue style -->
            <Button Grid.Column="3" VerticalAlignment="Center" Background="#003F62" Foreground="White" Padding="16,8"
                    Command="{x:Bind ViewModel.ExportToPdfCommand}">
                <Button.Resources>
                    <ResourceDictionary>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#00324E"/>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#00263B"/>
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                    </ResourceDictionary>
                </Button.Resources>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE74E;" FontSize="16"/> <!-- Download Icon -->
                    <TextBlock Text="Export"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="2" ColumnSpacing="16" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Products -->
            <Border Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="24,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0">
                        <TextBlock Text="Total Products Sold" FontWeight="SemiBold"/>
                        <FontIcon Glyph="&#xE712;" HorizontalAlignment="Right" FontSize="12" Foreground="Gray"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,12">
                        <Border Background="#1D546C" CornerRadius="4" Width="40" Height="40">
                             <FontIcon Glyph="&#xE7F8;" Foreground="White"/> 
                        </Border>
                        <TextBlock Text="{x:Bind ViewModel.TotalProductsSold, Mode=OneWay}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="{x:Bind ViewModel.ProductsChangeIcon, Mode=OneWay}" 
                                  Foreground="{x:Bind ViewModel.ProductsChangeColor, Mode=OneWay}" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.ProductsChangeText, Mode=OneWay}" 
                                   Foreground="{x:Bind ViewModel.ProductsChangeColor, Mode=OneWay}" FontSize="12"/>
                        <TextBlock Text="Compared to Previous Period" Foreground="Gray" FontSize="12" Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Orders -->
            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="24,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                         <TextBlock Text="Total Orders Completed" FontWeight="SemiBold"/>
                         <FontIcon Glyph="&#xE712;" HorizontalAlignment="Right" FontSize="12" Foreground="Gray"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,12">
                         <Border Background="#1D546C" CornerRadius="4" Width="40" Height="40">
                             <FontIcon Glyph="&#xE7BF;" Foreground="White"/>
                         </Border>
                        <TextBlock Text="{x:Bind ViewModel.TotalOrders, Mode=OneWay}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="{x:Bind ViewModel.OrdersChangeIcon, Mode=OneWay}" 
                                  Foreground="{x:Bind ViewModel.OrdersChangeColor, Mode=OneWay}" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.OrdersChangeText, Mode=OneWay}" 
                                   Foreground="{x:Bind ViewModel.OrdersChangeColor, Mode=OneWay}" FontSize="12"/>
                        <TextBlock Text="Compared to Previous Period" Foreground="Gray" FontSize="12" Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Revenue -->
            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="24,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                         <TextBlock Text="Total Revenue" FontWeight="SemiBold"/>
                         <FontIcon Glyph="&#xE712;" HorizontalAlignment="Right" FontSize="12" Foreground="Gray"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,12">
                         <Border Background="#1D546C" CornerRadius="4" Width="40" Height="40">
                             <FontIcon Glyph="&#xE1D0;" Foreground="White"/> 
                         </Border>
                        <TextBlock Text="{x:Bind ViewModel.TotalRevenue, Mode=OneWay}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="{x:Bind ViewModel.RevenueChangeIcon, Mode=OneWay}" 
                                  Foreground="{x:Bind ViewModel.RevenueChangeColor, Mode=OneWay}" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.RevenueChangeText, Mode=OneWay}" 
                                   Foreground="{x:Bind ViewModel.RevenueChangeColor, Mode=OneWay}" FontSize="12"/>
                        <TextBlock Text="Compared to Previous Period" Foreground="Gray" FontSize="12" Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Charts Area -->
        <Grid Grid.Row="3" ColumnSpacing="16" RowSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Products Sold Chart -->
            <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Products Sold Comparison" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Padding="0,0,0,12">
                        <lvc:CartesianChart Series="{x:Bind ViewModel.ProductsSeries, Mode=OneWay}"
                                            XAxes="{x:Bind ViewModel.ProductsXAxes, Mode=OneWay}"
                                            YAxes="{x:Bind ViewModel.ProductsYAxes, Mode=OneWay}"
                                            MinWidth="{x:Bind ViewModel.ProductsChartMinWidth, Mode=OneWay}">
                        </lvc:CartesianChart>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Top Customers List -->
            <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Top Customers" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" MinWidth="40"/>
                            <ColumnDefinition Width="Auto" MinWidth="70"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Name" Foreground="Gray" FontSize="12"/>
                        <TextBlock Grid.Column="1" Text="Orders" Foreground="Gray" FontSize="12" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="2" Text="Spent" Foreground="Gray" FontSize="12" HorizontalAlignment="Right"/>
                    </Grid>

                    <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.TopCustomers, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="-15,8,-10,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" MinWidth="40"/>
                                        <ColumnDefinition Width="Auto" MinWidth="70"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <PersonPicture DisplayName="{Binding CustomerName}" Height="32" Width="32"/>
                                        <TextBlock Text="{Binding CustomerName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="1" Text="{Binding TotalOrders}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="{Binding TotalSpent}" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Revenue & Profit Chart -->
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="12" Padding="24">
                 <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Revenue &amp; Profit" FontWeight="SemiBold" Margin="0,0,0,12"/>
                    
                    <lvc:CartesianChart Grid.Row="1" 
                                        Series="{x:Bind ViewModel.RevenueProfitSeries, Mode=OneWay}"
                                        XAxes="{x:Bind ViewModel.RevenueProfitXAxes, Mode=OneWay}">
                    </lvc:CartesianChart>
                </Grid>
            </Border>

            <!-- Staff Performance Table -->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                    Background="White" 
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="0"
                    Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Staff Performance" FontSize="18" FontWeight="SemiBold" Margin="24,12"/>
                    
                    <!-- Table Header -->
                    <Grid Grid.Row="1" Background="#F9FAFB" Padding="24,12" BorderBrush="#E0E0E0" BorderThickness="0,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="70"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1.5*" MinWidth="100"/>
                            <ColumnDefinition Width="1.5*" MinWidth="150"/>
                            <ColumnDefinition Width="1.5*" MinWidth="150"/>
                            <ColumnDefinition Width="1.5*" MinWidth="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ID" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="Name" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Email" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Orders" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Revenue" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="Profit" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Commission" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Items -->
                    <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.AllStaff, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:StaffPerformanceData">
                                <Grid Padding="24,16" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="70"/>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1.5*" MinWidth="100"/>
                                        <ColumnDefinition Width="1.5*" MinWidth="150"/>
                                        <ColumnDefinition Width="1.5*" MinWidth="150"/>
                                        <ColumnDefinition Width="1.5*" MinWidth="150"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="{x:Bind StaffId}" VerticalAlignment="Center" Foreground="#888888"/>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                                        <PersonPicture DisplayName="{x:Bind Username}" Width="32" Height="32"/>
                                        <TextBlock Text="{x:Bind Username}" VerticalAlignment="Center" FontWeight="Medium"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" Text="{x:Bind Email}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="{x:Bind TotalOrders}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="{x:Bind TotalRevenue}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Column="5" Text="{x:Bind TotalProfit}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#1D546C"/>
                                    <TextBlock Grid.Column="6" Text="{x:Bind TotalCommission}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#2E7D32"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

        </Grid>
        </Grid>
    </ScrollViewer>
</Page>
