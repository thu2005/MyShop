<Page
    x:Class="MyShop.App.Views.AddProductScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MyShop.App.ViewModels"
    xmlns:converters="using:MyShop.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter" />
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled">
        <StackPanel Padding="24" Background="#F8F9FC" Spacing="24">
            <!-- Header -->
            <StackPanel>
                <TextBlock Text="Add New Product" FontSize="30" FontWeight="Bold" Foreground="#0C2B4E"/>
                <TextBlock Margin="0,4,0,0" Foreground="#6B7280" FontSize="14">
                    <Run Text="Home"/>
                    <Run Text=" > " Foreground="#9CA3AF"/>
                    <Run Text="All Products"/>
                    <Run Text=" > " Foreground="#9CA3AF"/>
                    <Run Text="Add New Product"/>
                </TextBlock>
            </StackPanel>

            <!-- Draft Restore Banner -->
            <Border x:Name="DraftBanner"
                    x:FieldModifier="public"
                    Background="#FEF3C7"
                    BorderBrush="#F59E0B"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Visibility="Collapsed">
                <Grid ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon Grid.Column="0" 
                             Glyph="&#xE7BA;" 
                             FontSize="20"
                             Foreground="#F59E0B"
                             VerticalAlignment="Center"/>
                    
                    <TextBlock x:Name="DraftMessage"
                              x:FieldModifier="public"
                              Grid.Column="1"
                              Text="You have unsaved changes"
                              VerticalAlignment="Center"
                              Foreground="#92400E"
                              FontSize="14"/>
                    
                    <Button Grid.Column="2"
                            Content="Restore Draft"
                            Background="#F59E0B"
                            Foreground="White"
                            Padding="16,8"
                            CornerRadius="6"
                            BorderThickness="0"
                            Click="OnRestoreDraftClick"/>
                    
                    <Button Grid.Column="3"
                            Content="Discard"
                            Background="Transparent"
                            Foreground="#92400E"
                            Padding="16,8"
                            BorderThickness="1"
                            BorderBrush="#F59E0B"
                            CornerRadius="6"
                            Click="OnDiscardDraftClick"/>
                </Grid>
            </Border>

            <!-- Auto-save Indicator -->
            <TextBlock x:Name="AutoSaveIndicator"
                       x:FieldModifier="public"
                       Foreground="#6B7280"
                       FontSize="12"
                       Visibility="Collapsed"
                       HorizontalAlignment="Right"/>

            <!-- Main Content -->
            <Grid ColumnSpacing="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Product Info -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top">
                    <StackPanel Spacing="20">
                        <!-- Product Name -->
                        <StackPanel>
                            <TextBlock Text="Product Name" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                            <TextBox x:Name="NameBox" 
                                     PlaceholderText="Enter product name"
                                     Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel>
                            <TextBlock Text="Description" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                            <TextBox x:Name="DescriptionBox" 
                                     PlaceholderText="Enter product description"
                                     AcceptsReturn="True" TextWrapping="Wrap" Height="80"
                                     Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                        </StackPanel>

                        <!-- Category -->
                        <StackPanel>
                            <TextBlock Text="Category" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                            <ComboBox x:Name="CategoryComboBox"
                                      ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      PlaceholderText="Select a category"
                                      HorizontalAlignment="Stretch"
                                      Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="12"/>
                        </StackPanel>

                        <!-- SKU & Stock -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- SKU -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="SKU" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox x:Name="SkuBox" 
                                         PlaceholderText="Enter SKU"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>

                            <!-- Stock Quantity -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Stock Quantity" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox x:Name="StockBox" 
                                         PlaceholderText="0"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>
                        </Grid>

                        <!-- Cost Price & Sale Price -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Cost Price (CostPrice) -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Cost Price" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox x:Name="CostPriceBox" 
                                         PlaceholderText="0"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>

                            <!-- Sale Price (Price) -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Sale Price" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox x:Name="PriceBox" 
                                         PlaceholderText="0"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Right Column - Images -->
                <StackPanel Grid.Column="1" Spacing="20">
                    <!-- Product Image with Upload Button -->
                    <Grid>
                        <Border Background="White" CornerRadius="12" Padding="20" BorderBrush="#E5E7EB" BorderThickness="1" Height="380">
                            <Grid>
                                <Image x:Name="PreviewImage" Stretch="Uniform" Visibility="Collapsed"/>
                                <StackPanel x:Name="PlaceholderIcon" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                                    <FontIcon Glyph="&#xEB9F;" FontSize="64" Foreground="#9CA3AF"/>
                                    <TextBlock Text="No image selected" Foreground="#6B7280" FontSize="14"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Upload Image Button -->
                        <Button Click="OnUploadImageClick"
                                Background="#0F3D5E" 
                                Foreground="White"
                                CornerRadius="6"
                                Padding="16,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B9;" FontSize="14"/>
                                <TextBlock Text="Upload Image" FontWeight="SemiBold" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Action Buttons -->
                    <Grid ColumnSpacing="18" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Save Button -->
                        <Button Grid.Column="0" HorizontalAlignment="Stretch" Background="#0F3D5E" Foreground="White" 
                                CornerRadius="6" Padding="0,12" BorderThickness="0"
                                Click="OnSaveClick">
                            <TextBlock Text="SAVE" FontWeight="SemiBold"/>
                        </Button>

                        <!-- Cancel Button -->
                        <Button Grid.Column="1" HorizontalAlignment="Stretch" Background="White" Foreground="#374151" 
                                BorderBrush="#E5E7EB" BorderThickness="1"
                                CornerRadius="6" Padding="0,12"
                                Click="OnCancelClick">
                            <TextBlock Text="CANCEL" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
