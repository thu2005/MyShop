<Page
    x:Class="MyShop.App.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:MyShop.Core.Models"
    xmlns:vm="using:MyShop.App.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.App.Converters"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" Invert="True"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>
        <converters:OrderStatusToForegroundConverter x:Key="StatusToForegroundConverter"/>
        <converters:OrderStatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <converters:OrderStatusToTextConverter x:Key="StatusToTextConverter"/>

        <Style x:Key="TabRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid x:Name="RootGrid" 
                              Background="{TemplateBinding Background}"
                              CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#F5F5F5"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#E5E5E5"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#D9EDFF"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="#005FB8"/>
                                            <Setter Target="ContentPresenter.FontWeight" Value="SemiBold"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked"/>
                                    <VisualState x:Name="Indeterminate"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              AutomationProperties.AccessibilityView="Raw"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#003F62"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="#003F62" CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#004F7A"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#002F4A"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#CCCCCC"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="#666666"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Foreground="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filter Bar -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                <TextBlock Text="Orders List" FontSize="24" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Home > Orders List" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                <Button Content="Export" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Foreground="#333333" Padding="12,8" CornerRadius="4">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{Binding}"/>
                                <FontIcon Glyph="&#xE74E;" FontSize="14"/> <!-- Download/Export -->
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                
                <Button x:Name="NewOrderButton" Style="{StaticResource DialogPrimaryButtonStyle}" Click="OnAddOrderClick">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                        <TextBlock Text="New Order"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Filters & Search -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filters -->
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="Filter by" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,4,0"/>
                <ComboBox PlaceholderText="Status" SelectionChanged="OnStatusFilterChanged" Width="140" SelectedIndex="0">
                    <ComboBoxItem Content="All Status" Tag="All"/>
                    <ComboBoxItem Content="Pending" Tag="PENDING"/>
                    <ComboBoxItem Content="Processing" Tag="PROCESSING"/>
                    <ComboBoxItem Content="Completed" Tag="COMPLETED"/>
                    <ComboBoxItem Content="Cancelled" Tag="CANCELLED"/>
                </ComboBox>
                <ComboBox PlaceholderText="Price" SelectionChanged="OnPriceFilterChanged" Width="160" SelectedIndex="0">
                    <ComboBoxItem Content="All" Tag="All"/>
                    <ComboBoxItem Content="Under $100" Tag="Low"/>
                    <ComboBoxItem Content="$100 - $500" Tag="Medium"/>
                    <ComboBoxItem Content="Above $500" Tag="High"/>
                </ComboBox>
            </StackPanel>

            <!-- Search & Date -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <TextBox PlaceholderText="Search orders..." Width="250" VerticalAlignment="Center" TextChanged="OnSearchTextChanged"/>
                 <CalendarDatePicker x:Name="StartDatePicker"
                                    PlaceholderText="From" 
                                    DateFormat="{}{day.integer(2)}/{month.integer(2)}/{year.full}"
                                    DateChanged="OnStartDateChanged"/>
                <CalendarDatePicker x:Name="EndDatePicker"
                                    PlaceholderText="To"
                                    DateFormat="{}{day.integer(2)}/{month.integer(2)}/{year.full}"
                                    DateChanged="OnEndDateChanged"/>
            </StackPanel>
        </Grid>

        <!-- Orders List -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Table Header -->
            <Grid Grid.Row="0" Padding="20,12" Background="#EAECF0" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" CornerRadius="8,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="Order ID" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12"/>
                <TextBlock Grid.Column="1" Text="Date" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12"/>
                <TextBlock Grid.Column="2" Text="Customer Name" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12"/>
                <TextBlock Grid.Column="3" Text="Order Status" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12"/>
                <TextBlock Grid.Column="4" Text="Amount" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12" HorizontalAlignment="Right"/>
                <TextBlock Grid.Column="5" Text="Action" FontWeight="SemiBold" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12" HorizontalAlignment="Center"/>
            </Grid>

            <!-- List -->
            <ScrollViewer Grid.Row="1">
                <StackPanel Spacing="0">
                    <ListView ItemsSource="{x:Bind ViewModel.Orders, Mode=OneWay}"
                              SelectionMode="None"
                              IsItemClickEnabled="False">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Order">
                                <Grid Background="{ThemeResource LayerFillColorDefaultBrush}"
                                      Padding="20,16"
                                      BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                      BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- ID -->
                                    <TextBlock Grid.Column="0" Text="{x:Bind Id}" VerticalAlignment="Center" FontWeight="SemiBold"/>

                                    <!-- Date -->
                                    <TextBlock Grid.Column="1" Text="{x:Bind FormattedDate}" VerticalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                                    <!-- Customer -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                        <PersonPicture DisplayName="{x:Bind Customer.Name, TargetNullValue='Guest', FallbackValue='Guest'}" Width="32" Height="32"/>
                                        <!-- Keep generic text for initials, no avatar image needed -->
                                        <TextBlock Text="{x:Bind Customer.Name, TargetNullValue='Guest', FallbackValue='Guest'}" VerticalAlignment="Center" FontWeight="Medium"/>
                                    </StackPanel>

                                    <!-- Status -->
                                    <Border Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" CornerRadius="4" Padding="8,4"
                                            Background="{x:Bind Status, Converter={StaticResource StatusToBackgroundConverter}}">
                                        <TextBlock Text="{x:Bind Status, Converter={StaticResource StatusToTextConverter}}" 
                                                   FontSize="12" FontWeight="Medium"
                                                   Foreground="{x:Bind Status, Converter={StaticResource StatusToForegroundConverter}}"/>
                                    </Border>

                                    <!-- Amount -->
                                    <TextBlock Grid.Column="4" Text="{x:Bind Total, Converter={StaticResource CurrencyConverter}}" HorizontalAlignment="Right" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#003F62"/>

                                    <!-- Actions -->
                                    <Button Grid.Column="5" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center">
                                        <SymbolIcon Symbol="More"/>
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Detail" Icon="View" Click="OnViewOrderClick" Tag="{x:Bind}"/>
                                                <MenuFlyoutItem Text="Edit" Icon="Edit" Click="OnEditOrderClick" Tag="{x:Bind}"/>
                                                <MenuFlyoutItem Text="Delete" Icon="Delete" Click="OnCancelOrderClick" Tag="{x:Bind}"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,48,0,0"
                                Visibility="{x:Bind ViewModel.Orders.Count, Mode=OneWay, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                        <FontIcon Glyph="&#xE7C0;" FontSize="64"
                                  Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Text="No orders found" FontSize="18" Margin="0,16,0,0"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Text="Create your first order to get started" FontSize="14" Margin="0,8,0,0"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Pagination -->
        <Grid Grid.Row="3" Margin="0,16,0,0" Padding="16"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              CornerRadius="8"
              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
              BorderThickness="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                <Run Text="Showing"/>
                <Run Text="{x:Bind ViewModel.Orders.Count, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="of"/>
                <Run Text="{x:Bind ViewModel.TotalOrders, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="orders"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Click="OnFirstPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="First Page">
                    <FontIcon Glyph="&#xE892;" FontSize="12"/>
                </Button>
                <Button Click="OnPreviousPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Previous Page">
                    <FontIcon Glyph="&#xE76B;" FontSize="12"/>
                </Button>
                <TextBlock VerticalAlignment="Center" Margin="8,0">
                    <Run Text="Page"/>
                    <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="of"/>
                    <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
                <Button Click="OnNextPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Next Page">
                    <FontIcon Glyph="&#xE76C;" FontSize="12"/>
                </Button>
                <Button Click="OnLastPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Last Page">
                    <FontIcon Glyph="&#xE893;" FontSize="12"/>
                </Button>
                
                <!-- Page Size Selector -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Margin="12,0,0,0" Padding="12,0,0,0"/>
                <TextBlock Text="Show:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666666"/>
                <ComboBox SelectedItem="{x:Bind ViewModel.PageSize, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.AvailablePageSizes}"
                          MinWidth="80"
                          VerticalAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="x:Int32">
                            <TextBlock>
                                <Run Text="{x:Bind}"/>
                                <Run Text=" / page"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.RowSpan="4" Background="{ThemeResource SystemControlAcrylicWindowBrush}"
              Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="60" Height="60"/>
        </Grid>
    </Grid>
</Page>
