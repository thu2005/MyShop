<Page
    x:Class="MyShop.App.Views.CustomersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.App.Converters"
    mc:Ignorable="d"
    x:Name="PageRoot"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:BoolToMemberStatusColorConverter x:Key="BoolToMemberStatusColorConverter"/>
        <converters:BoolToMemberStatusTextConverter x:Key="BoolToMemberStatusTextConverter"/>
        <converters:DateFormatConverter x:Key="DateFormatConverter"/>
        <converters:BoolToSelectionModeConverter x:Key="BoolToSelectionModeConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CurrencyConverter x:Key="CurrencyConverter"/>

        <Style x:Key="TabRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid x:Name="RootGrid" 
                              Background="{TemplateBinding Background}"
                              CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#F5F5F5"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#E5E5E5"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled"/>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#D9EDFF"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="#005FB8"/>
                                            <Setter Target="ContentPresenter.FontWeight" Value="SemiBold"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked"/>
                                    <VisualState x:Name="Indeterminate"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              AutomationProperties.AccessibilityView="Raw"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="DialogPrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#003F62"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="#003F62" CornerRadius="{TemplateBinding CornerRadius}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#004F7A"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#002F4A"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="RootGrid.Background" Value="#CCCCCC"/>
                                            <Setter Target="ContentPresenter.Foreground" Value="#666666"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter"
                                              Content="{TemplateBinding Content}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="Center"
                                              VerticalContentAlignment="Center"
                                              Foreground="{TemplateBinding Foreground}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filters -->
            <RowDefinition Height="*"/>    <!-- List -->
            <RowDefinition Height="Auto"/> <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel>
                 <TextBlock Text="Customers List" FontSize="30" FontWeight="Bold" Foreground="#0C2B4E"/>
                 <TextBlock Text="Home > Customers List" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                <Button x:Name="NewCustomerButton" Background="#003F62" Foreground="White" Padding="12,8" CornerRadius="4" Click="NewCustomerButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/> <!-- Add -->
                        <TextBlock Text="New Customer"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Tabs & Search -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Tabs -->
            <StackPanel Orientation="Horizontal" Spacing="4" Background="White" CornerRadius="8" Padding="4">
                <RadioButton x:Name="AllCustomersRadio" Content="All Customers" IsChecked="True" Style="{StaticResource TabRadioButtonStyle}" Checked="FilterRadio_Checked" Tag="All" />
                <RadioButton x:Name="MembersRadio" Content="Members" Style="{StaticResource TabRadioButtonStyle}" Checked="FilterRadio_Checked" Tag="Members" />
            </StackPanel>

            <!-- Search & Date -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <TextBox PlaceholderText="Search customers..." Width="250" VerticalAlignment="Center" Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <CalendarDatePicker PlaceholderText="From" Date="{x:Bind ViewModel.FromDate, Mode=TwoWay}"/>
                <CalendarDatePicker PlaceholderText="To" Date="{x:Bind ViewModel.ToDate, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>

        <!-- List -->
        <Grid Grid.Row="2" Background="White" CornerRadius="8" Padding="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Items -->
            </Grid.RowDefinitions>

            <TextBlock Text="Recent Customers" FontSize="18" FontWeight="SemiBold" Margin="24,12"/>
            <Button Grid.Row="0" HorizontalAlignment="Right" Margin="24,12" Padding="8,4" Background="Transparent" BorderThickness="1" BorderBrush="#E0E0E0" Click="DeleteSelected_Click">
                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#666666"/> <!-- Delete/Trash -->
            </Button>

            <!-- Table Header -->
            <Grid Grid.Row="1" Background="#F9FAFB" Padding="24,12" BorderBrush="#E0E0E0" BorderThickness="0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Checkbox Spacer -->
                    <ColumnDefinition Width="2*"/> <!-- Name -->
                    <ColumnDefinition Width="2*"/> <!-- Email/Phone -->
                    <ColumnDefinition Width="1.5*"/> <!-- Total Spent -->
                    <ColumnDefinition Width="1.5*"/> <!-- Member Status -->
                    <ColumnDefinition Width="1.5*"/> <!-- Join Date -->
                    <ColumnDefinition Width="1*"/> <!-- Actions -->
                </Grid.ColumnDefinitions>
                
                <Border Width="50" Visibility="{x:Bind ViewModel.IsSelectionMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <CheckBox HorizontalAlignment="Center" IsChecked="{x:Bind ViewModel.IsAllSelected, Mode=TwoWay}"/>
                </Border>
                
                <TextBlock Grid.Column="1" Text="Customer Name" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="Contact" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3" Text="Total Spent" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="4" Text="Status" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="5" Text="Join Date" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="6" Text="Action" FontWeight="SemiBold" Foreground="#666666" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <!-- Items -->
            <ListView Grid.Row="2" ItemsSource="{x:Bind ViewModel.Customers, Mode=OneWay}" 
                      SelectionMode="{x:Bind ViewModel.IsSelectionMode, Mode=OneWay, Converter={StaticResource BoolToSelectionModeConverter}}"
                      SelectionChanged="ListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="24,16" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <PersonPicture DisplayName="{Binding Customer.Name}" Width="32" Height="32"/>
                                <TextBlock Text="{Binding Customer.Name}" VerticalAlignment="Center" FontWeight="Medium"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Customer.Email}" FontSize="12"/>
                                <TextBlock Text="{Binding Customer.Phone}" FontSize="12" Foreground="#888888"/>
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="{Binding Customer.TotalSpent, Converter={StaticResource CurrencyConverter}}" VerticalAlignment="Center" FontWeight="SemiBold"/>

                            <Border Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" CornerRadius="4" Padding="8,4"
                                    Background="{Binding Customer.IsMember, Converter={StaticResource BoolToMemberStatusColorConverter}, ConverterParameter=Background}">
                                <TextBlock Text="{Binding Customer.IsMember, Converter={StaticResource BoolToMemberStatusTextConverter}}" 
                                           FontSize="12" FontWeight="Medium"
                                           Foreground="{Binding Customer.IsMember, Converter={StaticResource BoolToMemberStatusColorConverter}, ConverterParameter=Foreground}"/>
                            </Border>

                            <TextBlock Grid.Column="4" Text="{Binding Customer.CreatedAt, Converter={StaticResource DateFormatConverter}}" VerticalAlignment="Center"/>

                            <Button Grid.Column="5" Background="Transparent" BorderThickness="0" HorizontalAlignment="Center">
                                <SymbolIcon Symbol="More"/>
                                <Button.Flyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="Edit" Icon="Edit" Click="EditCustomer_Click" Tag="{Binding}"/>
                                        <MenuFlyoutItem Text="Delete" Icon="Delete" Click="DeleteCustomer_Click" Tag="{Binding}"/>
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Pagination -->
        <Grid Grid.Row="3" Margin="0,16,0,0" Padding="16"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              CornerRadius="8"
              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
              BorderThickness="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                <Run Text="Showing"/>
                <Run Text="{x:Bind ViewModel.Customers.Count, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="of"/>
                <Run Text="{x:Bind ViewModel.TotalCustomers, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="customers"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Click="OnFirstPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="First Page">
                    <FontIcon Glyph="&#xE892;" FontSize="12"/>
                </Button>
                <Button Click="OnPreviousPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Previous Page">
                    <FontIcon Glyph="&#xE76B;" FontSize="12"/>
                </Button>
                <TextBlock VerticalAlignment="Center" Margin="8,0">
                    <Run Text="Page"/>
                    <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="of"/>
                    <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
                <Button Click="OnNextPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Next Page">
                    <FontIcon Glyph="&#xE76C;" FontSize="12"/>
                </Button>
                <Button Click="OnLastPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Last Page">
                    <FontIcon Glyph="&#xE893;" FontSize="12"/>
                </Button>
                
                <!-- Page Size Selector -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Margin="12,0,0,0" Padding="12,0,0,0"/>
                <TextBlock Text="Show:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666666"/>
                <ComboBox SelectedItem="{x:Bind ViewModel.PageSize, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.AvailablePageSizes}"
                          MinWidth="80"
                          VerticalAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="x:Int32">
                            <TextBlock>
                                <Run Text="{x:Bind}"/>
                                <Run Text=" / page"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.RowSpan="4" Background="{ThemeResource SystemControlAcrylicWindowBrush}"
              Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" Width="60" Height="60"/>
        </Grid>

    </Grid>
</Page>
