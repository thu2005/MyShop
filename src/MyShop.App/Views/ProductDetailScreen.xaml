<Page
    x:Name="PageRoot"
    x:Class="MyShop.App.Views.ProductDetailScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MyShop.App.ViewModels"
    xmlns:models="using:MyShop.Core.Models"
    xmlns:converters="using:MyShop.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F5F7FA">

    <Page.Resources>
        <converters:CurrencyConverter x:Key="CurrencyConverter" />
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter" />
        <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Enabled">
        <StackPanel Padding="24" Background="#F8F9FC" Spacing="24">
            <!-- Header -->
            <StackPanel>
                <TextBlock Text="Product Details" FontSize="30" FontWeight="Bold" Foreground="#0C2B4E"/>
                <TextBlock FontSize="14" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Margin="0,4,0,0">
                    <Run Text="Home"/>
                    <Run Text=" > " Foreground="#9CA3AF"/>
                    <Run Text="All Products"/>
                    <Run Text=" > " Foreground="#9CA3AF"/>
                    <Run Text="Product Details"/>
                </TextBlock>
            </StackPanel>

            <!-- Main Content -->
            <Grid ColumnSpacing="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Product Info -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="24" BorderBrush="#E5E7EB" BorderThickness="1" VerticalAlignment="Top">
                    <StackPanel Spacing="20">
                        <!-- Product Name -->
                        <StackPanel>
                            <TextBlock Text="Product Name" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                            <TextBox Text="{x:Bind ViewModel.CurrentProduct.Name, Mode=TwoWay}" 
                                     IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                     Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel>
                            <TextBlock Text="Description" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                            <TextBox Text="{x:Bind ViewModel.CurrentProduct.Description, Mode=TwoWay, FallbackValue='', TargetNullValue=''}" 
                                     IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                     AcceptsReturn="True" TextWrapping="Wrap" Height="70"
                                     Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                        </StackPanel>

                        <!-- Category -->
                        <StackPanel>
                            <TextBlock Text="Category" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                                      SelectedValue="{x:Bind ViewModel.CurrentProduct.CategoryId, Mode=TwoWay}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      PlaceholderText="Select a category"
                                      IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                      HorizontalAlignment="Stretch"
                                      Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="12"/>
                        </StackPanel>

                        <!-- SKU & Stock -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- SKU -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="SKU" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Text="{x:Bind ViewModel.CurrentProduct.Sku, Mode=TwoWay}" 
                                         IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>

                            <!-- Stock Quantity -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Stock Quantity" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Text="{x:Bind ViewModel.EditStockText, Mode=TwoWay}" 
                                         IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>
                        </Grid>

                        <!-- Cost Price & Sale Price -->
                        <Grid ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Cost Price (Admin Only) -->
                            <StackPanel Grid.Column="0" Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Cost Price" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Text="{x:Bind ViewModel.EditCostPriceText, Mode=TwoWay}" 
                                         IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>

                            <!-- Sale Price (Half Width) - Admin Only -->
                            <StackPanel Grid.Column="1" Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Sale Price" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Text="{x:Bind ViewModel.EditPriceText, Mode=TwoWay}" 
                                         IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>
                            
                            <!-- Sale Price (Full Width) - Staff Only -->
                            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Visibility="{x:Bind ViewModel.IsStaff, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Sale Price" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                                <TextBox Text="{x:Bind ViewModel.EditPriceText, Mode=TwoWay}" 
                                         IsEnabled="{x:Bind ViewModel.IsEditMode, Mode=OneWay}"
                                         Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" CornerRadius="6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Right Column - Images -->
                <StackPanel Grid.Column="1" Spacing="20">
                    <!-- Main Image (Large) -->
                    <Grid>
                        <Border Background="White" CornerRadius="12" Padding="20" 
                                BorderBrush="#E5E7EB" BorderThickness="1" Height="380">
                            <Image x:Name="MainImageDisplay"
                                   Source="{x:Bind ViewModel.MainImageUrl, Mode=OneWay, Converter={StaticResource StringToImageSourceConverter}}" 
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <!-- Upload/Manage Images Button (Edit Mode) -->
                        <Button Command="{x:Bind ViewModel.ManageImagesCommand}" 
                                Visibility="{x:Bind ViewModel.IsEditMode, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#0F3D5E" Foreground="White" CornerRadius="6" Padding="16,10"
                                HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B9;" FontSize="14"/>
                                <TextBlock Text="Manage Images" FontWeight="SemiBold" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <!-- All Images Grid (Thumbnails) -->
                    <ItemsRepeater ItemsSource="{x:Bind ViewModel.ProductImagesCollection, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <UniformGridLayout MinItemWidth="80" MinItemHeight="80" 
                                             ItemsStretch="Fill" MinColumnSpacing="8" MinRowSpacing="8"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:ProductImage">
                                <Grid>
                                    <Border CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1"
                                            Background="White">
                                        <Image Source="{x:Bind ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                               Stretch="UniformToFill"/>
                                    </Border>
                                    
                                    <!-- Main Image Indicator (Star Icon - Always visible if IsMain) -->
                                    <Border Background="#10B981" CornerRadius="12" 
                                            Width="24" Height="24"
                                            HorizontalAlignment="Left" VerticalAlignment="Top"
                                            Margin="4"
                                            Visibility="{x:Bind IsMain, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <FontIcon Glyph="&#xE734;" FontSize="12" Foreground="White"/>
                                    </Border>
                                    
                                    <!-- Hover Overlay with Action Buttons (Edit Mode Only) -->
                                    <Grid x:Name="HoverOverlay" 
                                          Background="#80000000" 
                                          CornerRadius="8"
                                          Opacity="0"
                                          PointerEntered="OnImagePointerEntered"
                                          PointerExited="OnImagePointerExited"
                                          Visibility="{Binding ElementName=PageRoot, Path=ViewModel.IsEditMode, Mode=OneWay}">
                                        
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   Spacing="8">
                                            <!-- Set as Main Button -->
                                            <Button Background="#10B981" 
                                                    CornerRadius="16"
                                                    Width="32" Height="32"
                                                    Padding="0"
                                                    Click="OnSetMainImageClick"
                                                    Tag="{x:Bind}"
                                                    ToolTipService.ToolTip="Set as main image">
                                                <FontIcon Glyph="&#xE734;" FontSize="14" Foreground="White"/>
                                            </Button>
                                            
                                            <!-- Delete Button -->
                                            <Button Background="#EF4444" 
                                                    CornerRadius="16"
                                                    Width="32" Height="32"
                                                    Padding="0"
                                                    Click="OnDeleteImageClick"
                                                    Tag="{x:Bind}"
                                                    ToolTipService.ToolTip="Delete image">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="White"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>

                    <!-- Action Buttons -->
                    <Grid ColumnSpacing="18" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Edit/Update Button (Admin Only) -->
                        <Button x:Name="EditUpdateButton" Grid.Column="0" HorizontalAlignment="Stretch" Background="#0F3D5E" Foreground="White" 
                                CornerRadius="6" Padding="0,12" BorderThickness="0"
                                Click="OnEditUpdateClick"
                                Visibility="{Binding ElementName=PageRoot, Path=ViewModel.IsAdmin, Mode=OneWay}">
                            <TextBlock x:Name="EditUpdateText" FontWeight="SemiBold"/>
                        </Button>

                        <!-- Delete Button (Admin Only) -->
                        <Button Grid.Column="1" HorizontalAlignment="Stretch" Background="#EF4444" Foreground="White" 
                                CornerRadius="6" Padding="0,12" BorderThickness="0"
                                Click="OnDeleteClick"
                                Visibility="{Binding ElementName=PageRoot, Path=ViewModel.IsAdmin, Mode=OneWay}">
                            <TextBlock Text="DELETE" FontWeight="SemiBold"/>
                        </Button>

                        <!-- Close Button -->
                        <Button Grid.Column="2" HorizontalAlignment="Stretch" Background="White" Foreground="#374151" 
                                BorderBrush="#E5E7EB" BorderThickness="1"
                                CornerRadius="6" Padding="0,12"
                                Click="OnCloseClick">
                            <TextBlock Text="CLOSE" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
