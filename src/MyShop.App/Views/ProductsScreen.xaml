<Page
    x:Name="PageRoot"
    x:Class="MyShop.App.Views.ProductsScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:MyShop.Core.Models"
    xmlns:vm="using:MyShop.App.ViewModels"
    xmlns:converters="using:MyShop.App.Converters"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:StringToImageSourceConverter x:Key="StringToImageSourceConverter" />
        <converters:StockToWidthConverter x:Key="StockToWidthConverter" />
        <converters:CurrencyConverter x:Key="CurrencyConverter" />
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Spacing="4">
               <TextBlock Text="Products" FontSize="24" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
               <TextBlock Text="Home > Products" 
                               FontSize="14" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" Visibility="{x:Bind ViewModel.IsAdmin, Mode=OneWay}">
                <Button Grid.Column="5" Background="#0F3D5E" Foreground="White" CornerRadius="6" Padding="12,6" Click="OnAddProductClick" BorderThickness="0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE710;" FontSize="12"/>
                    <TextBlock Text="Product" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
                <Button Background="#0F3D5E" Foreground="White" CornerRadius="6" Padding="12,6" BorderThickness="0" Click="OnAddCategoryClick">
                     <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="12"/>
                        <TextBlock Text="Category" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search and Actions -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <AutoSuggestBox x:Name="SearchBox" Width="240" PlaceholderText="Search products..." QueryIcon="Find"
                            QuerySubmitted="OnSearchQuerySubmitted"
                            TextChanged="OnSearchTextChanged"
                            CornerRadius="6"/>

            <TextBox Grid.Column="1" x:Name="FromPriceBox" PlaceholderText="From USD" Width="90" CornerRadius="6" TextChanged="OnPriceRangeChanged" Margin="12,0,0,0"/>
            <TextBox Grid.Column="2" x:Name="ToPriceBox" PlaceholderText="To USD" Width="90" CornerRadius="6" TextChanged="OnPriceRangeChanged" Margin="12,0,0,0"/>

            <ComboBox Grid.Column="3" x:Name="PrimarySortComboBox" 
                      PlaceholderText="Sort by" 
                      Width="160" 
                      CornerRadius="6"
                      SelectionChanged="OnPrimarySortChanged"
                      Margin="12,0,0,0">
                <ComboBoxItem Content="Price (Low to High)" Tag="PriceAsc"/>
                <ComboBoxItem Content="Price (High to Low)" Tag="PriceDesc"/>
                <ComboBoxItem Content="Stock (Low to High)" Tag="StockAsc"/>
                <ComboBoxItem Content="Stock (High to Low)" Tag="StockDesc"/>
            </ComboBox>
            
            <ComboBox Grid.Column="4" x:Name="SecondarySortComboBox" 
                      PlaceholderText="Then by" 
                      Width="160" 
                      CornerRadius="6"
                      IsEnabled="False"
                      SelectionChanged="OnSecondarySortChanged"
                      Margin="12,0,0,0"/>

            <Button Grid.Column="5" 
                    Click="OnClearFiltersClick"
                    Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Foreground="#666666" 
                    Padding="12,6" 
                    CornerRadius="6"
                    Margin="12,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                    <TextBlock Text="Reset"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Product Grid -->
        <ScrollViewer Grid.Row="2">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.Products, Mode=OneWay}" Margin="0,0,0,16">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinItemWidth="300" MinItemHeight="300" ItemsStretch="Fill" MinColumnSpacing="16" MinRowSpacing="16"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Button Background="Transparent" BorderThickness="0" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Click="OnProductCardClick" Tag="{x:Bind}">
                            <Grid Background="White" CornerRadius="12" Padding="20" BorderBrush="#E5E7EB" BorderThickness="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                            <!-- Header info -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="64" Height="64" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                                    <Image Source="{x:Bind ImageUrl, Converter={StaticResource StringToImageSourceConverter}}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Name}" FontSize="16" FontWeight="Bold" Foreground="#111827" TextTrimming="CharacterEllipsis"
                                               ToolTipService.ToolTip="{x:Bind Name}"/>
                                    <TextBlock Text="{x:Bind Category.Name, FallbackValue='Category'}" Foreground="#6B7280" FontSize="14" Margin="0,2,0,4"/>
                                    <TextBlock Text="{x:Bind Price, Converter={StaticResource CurrencyConverter}}" FontSize="14" FontWeight="Bold" Foreground="#111827"/>
                                </StackPanel>

                                <Button Grid.Column="2" VerticalAlignment="Top" Background="Transparent" Padding="4" BorderThickness="0"
                                        Visibility="{Binding ElementName=PageRoot, Path=ViewModel.IsAdmin, Mode=OneWay}">
                                    <FontIcon Glyph="&#xE712;" FontSize="16" Foreground="#9CA3AF"/>
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Edit" Icon="Edit" Click="OnEditProductClick" Tag="{x:Bind}"/>
                                            <MenuFlyoutItem Text="Delete" Icon="Delete" Click="OnDeleteProductClick" Tag="{x:Bind}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>

                            <!-- Description -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                                <TextBlock Text="Description" FontWeight="SemiBold" FontSize="14" Foreground="#111827" Margin="0,0,0,4"/>
                                <TextBlock Text="{x:Bind Description, FallbackValue='No description available.'}" 
                                           FontSize="14" Foreground="#6B7280" TextWrapping="Wrap" MaxHeight="80" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Stats Box -->
                            <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16,12">
                                <StackPanel Spacing="12">
                                    <!-- Regular Price (Admin Only) -->
                                    <Grid Visibility="{Binding ElementName=PageRoot, Path=ViewModel.IsAdmin, Mode=OneWay}">
                                        <TextBlock Text="Regular Price" Foreground="#374151" FontSize="14"/>
                                        <TextBlock Text="{x:Bind CostPrice, Converter={StaticResource CurrencyConverter}, FallbackValue='N/A'}" 
                                                   HorizontalAlignment="Right" Foreground="#059669" FontSize="14" FontWeight="Medium"/>
                                    </Grid>
                                    <Border Height="1" Background="#E5E7EB" Visibility="{Binding ElementName=PageRoot, Path=ViewModel.IsAdmin, Mode=OneWay}"/>
                                    
                                    <Grid>
                                        <TextBlock Text="Sales" Foreground="#374151" FontSize="14"/>
                                        <TextBlock Text="{x:Bind Popularity}" HorizontalAlignment="Right" Foreground="#374151" FontSize="14" FontWeight="Medium"/>
                                    </Grid>
                                    <Border Height="1" Background="#E5E7EB"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="Remaining Products" Foreground="#374151" FontSize="14" VerticalAlignment="Center"/>
                                        
                                        <!-- Progress Bar -->
                                        <Grid Grid.Column="1" Height="6" Margin="12,0" VerticalAlignment="Center" MaxWidth="100">
                                            <Border CornerRadius="3" Background="#E5E7EB"/>
                                            <Border CornerRadius="3" Background="#FF9F29" HorizontalAlignment="Left" Width="{x:Bind Converter={StaticResource StockToWidthConverter}}"/>
                                        </Grid>
                                        
                                        <TextBlock Grid.Column="2" Text="{x:Bind Stock}" Foreground="#374151" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Button>
                </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>

        <ProgressRing Grid.Row="2" IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Pagination Footer -->
        <Grid Grid.Row="3" Margin="0,16,0,0" Padding="16"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              CornerRadius="8"
              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
              BorderThickness="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                <Run Text="Showing"/>
                <Run Text="{x:Bind ViewModel.Products.Count, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="of"/>
                <Run Text="{x:Bind ViewModel.TotalProducts, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="products"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Click="OnFirstPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="First Page">
                    <FontIcon Glyph="&#xE892;" FontSize="12"/>
                </Button>
                <Button Click="OnPreviousPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Previous Page">
                    <FontIcon Glyph="&#xE76B;" FontSize="12"/>
                </Button>
                <TextBlock VerticalAlignment="Center" Margin="8,0">
                    <Run Text="Page"/>
                    <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="of"/>
                    <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
                <Button Click="OnNextPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Next Page">
                    <FontIcon Glyph="&#xE76C;" FontSize="12"/>
                </Button>
                <Button Click="OnLastPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Last Page">
                    <FontIcon Glyph="&#xE893;" FontSize="12"/>
                </Button>
                
                <!-- Page Size Selector -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1,0,0,0" Margin="12,0,0,0" Padding="12,0,0,0"/>
                <TextBlock Text="Show:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#666666"/>
                <ComboBox SelectedItem="{x:Bind ViewModel.PageSize, Mode=TwoWay}"
                          ItemsSource="{x:Bind ViewModel.AvailablePageSizes}"
                          MinWidth="80"
                          VerticalAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="x:Int32">
                            <TextBlock>
                                <Run Text="{x:Bind}"/>
                                <Run Text=" / page"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>