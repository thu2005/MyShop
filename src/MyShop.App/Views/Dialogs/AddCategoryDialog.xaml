<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MyShop.App.Views.Dialogs.AddCategoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add New Category"
    PrimaryButtonText="SAVE"
    CloseButtonText="CANCEL"
    PrimaryButtonClick="OnPrimaryButtonClick"
    CloseButtonClick="OnCloseButtonClick"
    DefaultButton="Primary"
    Background="White"
    CornerRadius="8">

    <ContentDialog.Resources>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#003F62"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </ContentDialog.Resources>

    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="Add New Category" FontSize="20" FontWeight="Bold" Foreground="#111827"/>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <ContentDialog.Style>
        <Style TargetType="ContentDialog">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </ContentDialog.Style>

    <StackPanel Spacing="16" MinWidth="400">
        <!-- Category Name -->
        <StackPanel>
            <TextBlock Text="Category Name *" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <TextBox x:Name="NameBox" 
                     PlaceholderText="Enter category name"
                     Background="White" 
                     BorderBrush="#E5E7EB" 
                     BorderThickness="1" 
                     Padding="12" 
                     CornerRadius="6"/>
        </StackPanel>

        <!-- Error Message -->
        <TextBlock x:Name="ErrorText"
                   x:FieldModifier="public"
                   Foreground="Red"
                   Visibility="Collapsed"
                   TextWrapping="Wrap"
                   Margin="0,0,0,0"/>
    </StackPanel>
</ContentDialog>
