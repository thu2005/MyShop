<Page
    x:Class="MyShop.App.Views.LoginScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:MyShop.App.Converters"
    mc:Ignorable="d"
    Background="#F3F6F9">
    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityReverseConverter" Invert="True" />
    </Page.Resources>

    <Grid>
        <Grid Width="850" Height="500"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              CornerRadius="12"
              Background="White">

            <Grid.Shadow>
                <ThemeShadow />
            </Grid.Shadow>
            <Grid.Translation>0,0,32</Grid.Translation>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" CornerRadius="12,0,0,12">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0C2B4E" Offset="0.0" />
                        <GradientStop Color="#1E5EFF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16" Margin="20">
                    <Border CornerRadius="12" BorderBrush="White" BorderThickness="2" Width="64" Height="64">
                        <FontIcon Glyph="&#xE719;" FontFamily="Segoe Fluent Icons" FontSize="32" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <TextBlock Text="MyShop" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Manage efficiently" 
                               FontSize="14" 
                               Foreground="#CCFFFFFF" 
                               FontStyle="Italic"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center" 
                        Spacing="20" 
                        Padding="40">

                <StackPanel Spacing="5" Margin="0,0,0,10">
                    <TextBlock Text="Welcome Back!" FontSize="26" FontWeight="SemiBold" Foreground="#0C2B4E"/>
                    <TextBlock Text="Please enter your details to sign in." FontSize="14" Foreground="Gray"/>
                </StackPanel>

                <TextBox Header="Username" 
                         Text="{x:Bind ViewModel.Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         PlaceholderText="Enter username"
                         BorderBrush="#E0E0E0"/>

                <!-- Custom Password Field with reliable reveal button -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Password" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               Margin="0,0,0,8"/>
                    
                    <Grid Grid.Row="1">
                        <!-- Hidden PasswordBox (shown when password is hidden) -->
                        <PasswordBox x:Name="PasswordHidden"
                                     Password="{x:Bind ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     PlaceholderText="Enter password"
                                     PasswordRevealMode="Hidden"
                                     BorderBrush="#E0E0E0"
                                     Visibility="{x:Bind IsPasswordVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}"/>
                        
                        <!-- Visible TextBox (shown when password is revealed) -->
                        <TextBox x:Name="PasswordVisible"
                                 Text="{x:Bind ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PlaceholderText="Enter password"
                                 BorderBrush="#E0E0E0"
                                 Visibility="{x:Bind IsPasswordVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        
                        <!-- Toggle Button for reveal -->
                        <Button x:Name="RevealButton"
                                Click="RevealButton_Click"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10,0"
                                Margin="0,1,1,1">
                            <FontIcon x:Name="RevealIcon" 
                                      Glyph="&#xE7B3;" 
                                      FontSize="14"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </Button>
                    </Grid>
                </Grid>

                <CheckBox Content="Remember me" 
                          IsChecked="{x:Bind ViewModel.RememberMe, Mode=TwoWay}" />

                <Button Command="{x:Bind ViewModel.LoginCommand}" 
                    HorizontalAlignment="Stretch" 
                    Height="40"
                    Background="#0C2B4E"
                    Foreground="White"
                    CornerRadius="4"
                    IsEnabled="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}">

                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#163D6D" />
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#163D6D" />
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White" />
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White" />

                        <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#0C2B4E" Opacity="0.8" />
                        <SolidColorBrush x:Key="ButtonForegroundDisabled" Color="White" />
                    </Button.Resources>

                    <Grid>
                        <TextBlock Text="Login" 
                           FontWeight="Bold" 
                           Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityReverseConverter}}"/>
                        <ProgressRing IsActive="True" 
                      Width="20" 
                      Height="20" 
                      Foreground="White" 
                      Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Button>

                <InfoBar IsOpen="{x:Bind ViewModel.HasError, Mode=OneWay}"
                         Severity="Error"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsClosable="False" />

                <StackPanel Orientation="Vertical" Spacing="5">
                    <HyperlinkButton Content="Server Settings" 
                                     Command="{x:Bind ViewModel.OpenConfigCommand}"
                                     HorizontalAlignment="Center"
                                     Foreground="#1E5EFF"/>

                    <TextBlock Text="{x:Bind ViewModel.AppVersion, Mode=OneTime}" 
                               FontSize="10" 
                               HorizontalAlignment="Center" 
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>